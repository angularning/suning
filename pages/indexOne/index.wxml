<view style='backgrond:#f4f4f4;'>
  <view class='moneyTotal'>
    <block wx:if="{{role==5}}">
      <view class='kyMoney' bindtap='toBigPlace'>
        <view class='moneyWord'>启动大区</view>
        <view class='moneyNum'>{{regionNumber}}</view>
      </view>
      <view class='monthMoney'>
        <view class='moneyWord'>业务门店</view>
        <view class='moneyNum'>{{storeNumber}}</view>
      </view>
    </block>

    <block wx:elif="{{role==4}}">
      <view class='kyMoney' bindtap='toBigPlace'>
        <view class='moneyWord'>负责人</view>
        <view class='moneyNum'>{{regionManager4}}</view>
      </view>
      <view class='monthMoney'>
        <view class='moneyWord'>业务门店</view>
        <view class='moneyNum'>{{storeNumber4}}</view>
      </view>
    </block>

    <block wx:elif="{{role==3}}">
      <view class='kyMoney' bindtap='toBigPlace'>
        <view class='moneyWord'>督导</view>
        <view class='moneyNum'>{{storeManager}}</view>
      </view>
      <view class='monthMoney'>
        <view class='moneyWord'>店员</view>
        <view class='moneyNum'>{{clerkNumber}}</view>
      </view>
    </block>

    <block wx:else="{{role==2}}">
      <view class='kyMoney'>
        <view class='moneyWord'>督导</view>
        <view class='moneyNum'>{{storeManager2}}</view>
      </view>
      <view class='monthMoney'>
        <view class='moneyWord'>店员</view>
        <view class='moneyNum'>{{clerkNumber2}}</view>
      </view>
    </block>

  </view>
  <view class='indexNews' bindtap='toSendMessage'>
    <view class='indexNewsIcon'>
      <image src='/image/index/xiaoxi@2x.png'></image>
    </view>
    <swiper class="swiper_container" vertical="true" autoplay="true" circular="true" interval="2000" display-multiple-items='2'>
      <view class='indexNewsList'>
        <view wx:for="{{userMessageList}}">
          <swiper-item style="height:40rpx;">
            <image src='/image/block.png'></image>
            <!-- <text class='indexNewsListName'>小郑</text> -->
            <text class='newsLength'>{{item.messageContent}}</text>
            <text class='indexNewsListTime'>{{item.messageTime}}</text>
          </swiper-item>
        </view>
      </view>
    </swiper>
    <view class='indexRights' style='margin-top:4%;margin-left:10rpx;'>
      <image src='/image/iconRights.png'></image>
    </view>
  </view>
  <view class='myYeBox'>
    <view class='myYeTitle'>
      <view class='wordBg'>
        <image src='/image/myYeBg.png'></image>
      </view>
      <view class='indexWordTitle'>
        <text>我的业务</text>
      </view>
      <view class='indexRights' style='margin-top:-10rpx;margin-right:20rpx;'>
        <image src='/image/iconRights.png'></image>
      </view>
    </view>
    <view class='yewuList'>
      <block wx:for="{{businessModelList}}">
        <view data-num='{{index}}' bindtap='toYeDetail'>
          <image src='{{item.businessIoc}}'></image>
        </view>
      </block>
    </view>
  </view>
  <block wx:if="{{role==5}}">
    <view style='backgrond:#fff;margin:0 3%;'>
      <!-- <view class='myYeTitle'>
        <view class='wordBg'>
          <image src='/image/myYeBg.png'></image>
        </view>
        <view class='indexWordTitle' style='font-size:28rpx;'>
          <text style='position:relative;top:6rpx;color:#333;'>分成设置</text>
        </view>
        <view class='indexRights' style='margin-top:-10rpx;margin-right:20rpx;'>
          <image src='/image/iconRights.png'></image>
        </view>
      </view> -->
      <view class='myYeTitle' bindtap='toSendTong'>
        <view class='wordBg'>
          <image src='/image/myYeBg.png'></image>
        </view>
        <view class='indexWordTitle' style='font-size:28rpx;'>
          <text style='position:relative;top:8rpx;color:#333;'>发送通知</text>
        </view>
        <view class='indexRights' style='margin-top:-10rpx;margin-right:20rpx;'>
          <image src='/image/iconRights.png'></image>
        </view>
      </view>
    </view>
  </block>

  <block wx:if="{{role==4}}">
    <view class="balanceReport">
      <view class='myYeTitle' style='border-bottom:2rpx #eee solid;padding-top:30rpx;'>
        <view class='wordBg'>
          <image src='/image/myYeBg.png'></image>
        </view>
        <view class='indexWordTitle'>
          <text>收益报表</text>
        </view>
        <view class='publicRight' style='width:160px;color:#5484FF;text-align:right;margin-right:5%;'>
          <text bindtap='toSeeMore4Shop'>更多门店数据</text>
        </view>
      </view>
    </view>
    <view class='balanceListBox' wx:for="{{storeInfoList}}">
      <view class='afterClear'>
        <view class='balanceListBoxName'>{{item.storeName}}</view>
        <view class='balanceListBoxCaiFu'>{{item.yesterdayWealth}}</view>
      </view>
      <view class='afterClear'>
        <view>
          <text class='balanceListBoxWord'>拥有店员</text>
          <text class='balanceListBoxNum'>{{item.clerkNumber}}</text>
        </view>
        <view class='balanceListBoxLast'>昨日预估收益（财富)</view>
      </view>
    </view>
  </block>

  <block wx:if="{{role==3}}">
    <view class="balanceReport">
      <view class='myYeTitle' style='border-bottom:2rpx #eee solid;padding-top:30rpx;'>
        <view class='wordBg'>
          <image src='/image/myYeBg.png'></image>
        </view>
        <view class='indexWordTitle'>
          <text>店员</text>
        </view>
        <view class='publicRight' style='width:160px;color:#5484FF;text-align:right;margin-right:5%;'>
          <text bindtap='toSeeMoreShopper'>查看所有店员</text>
        </view>
      </view>
    </view>
    <view class='balanceListBox' wx:for="{{dianyuan3List}}">
      <view class='afterClear'>
        <view class='balanceListBoxName'>{{item.clerkName}}</view>
        <view class='balanceListBoxCaiFu'>{{item.yesterdayWealth}}</view>
      </view>
      <view class='afterClear'>
        <!-- <view>
          <text class='balanceListBoxWord'>拥有店员</text>
          <text class='balanceListBoxNum'>{{item.shopper}}</text>
        </view> -->
        <view class='balanceListBoxLast'>昨日预估收益（财富)</view>
      </view>
    </view>
  </block>

  <block wx:if="{{role==2}}">
   
  </block>
</view>