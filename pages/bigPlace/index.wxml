<view style='backgrond-color:#fff;'>
  <view bindtap='hideBox'>
    <view class='bigPlaceTitle'>
      <view class='titlePlace'>大区</view>
      <view class='titleNum'>门店数</view>
      <view class='titleSelect' bindtap='chooseSelect'>
        <view class='selectedName'><text>{{selectName}}</text><image  class="downIcon" src='{{iconTrue?downIcon:upIcon}}'></image></view>
        <view class='selectBox'>
         <view class='' data-name="{{item.name}}"  wx:if="{{!iconTrue? true : false}}" bindtap='changeSelect' wx:for="{{selectList}}">{{item.name}}</view>
        </view>
         
      </view>
      <!-- <picker class='titleSelect' bindchange="bindPickerChange" value="{{index}}" range="{{gender}}">
        <view class="picker">今日预估{{detail}}</view>
      </picker> -->
    </view>
    <view>
      <scroll-view style='height:1200rpx;'>
      <view class='placeListBox' bindtap='toPlaceDetail' wx:for="{{placeList}}" data-id="{{item.id}}">
        <view class='placeListBoxPlace'>{{item.place}}</view>
        <view class='placeListBoxNum'>{{item.num}}</view>
        <view class='placeListBoxMoney'>{{item.money}}</view>
      </view>
      </scroll-view>
    </view>
  </view>
</view>