.selectBox view{
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 14rpx;
}

.placeListBox view {
  border-bottom: 2rpx #eee solid;
  height: 100rpx;
  line-height: 100rpx;
}

.placeListBoxPlace {
  width: 28%;
  text-align: center;
  position: relative;
}

.placeListBoxNum {
  width: 42%;
  text-align: center;
}

.placeListBoxMoney {
  width: 30%;
  text-align: center;
}
