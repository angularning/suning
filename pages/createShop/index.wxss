/**index.wxss**/

.container {
  position: absolute;
  height: 100%;
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.citypicker {
  width: 100%;
  z-index: 999;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}

.cityheader {
  position: absolute;
  top: 0px;
  width: 100%;
  z-index: 4;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2fb42e;
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}

.input {
  padding-top: 300rpx;
  width: 100%;
}

.input input {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx 50rpx;
}

.section {
  padding-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.normalInput {
  height: 45px;
  line-height: 45px;
  /* width: 96%; */
  padding: 0 2%;
  border: 1px solid rgba(206, 206, 206, 1);
  margin-bottom: 20px;
}

.normalBtn1 {
  /* width: 96%; */
  height: 90rpx;
  line-height: 90rpx;
  background: rgba(245, 179, 42, 1);
  border-radius: 12rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  margin-top: 50px;
  color: rgba(255, 255, 255, 1);
  margin-bottom: 100px;
}

.bgOver {
  width: 100%;
  height: 100vh;
  background-color: rgba(70, 69, 69, 0.8);
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 20;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.createTitle {
  font-size: 18px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  padding: 10px 0;
}

.seeDetail {
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(37, 125, 255, 1);
  padding: 10px 0;
}

.uploadImg {
  width: 100%;
  text-align: center;
}

.uploadImg image {
  width: 100%;
}

.createDoc {
  padding: 15px 0;
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(25, 59, 103, 1);
}
